<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1.5in"
        android:src="@drawable/image"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="0.3in"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Locadora Games"
        android:layout_marginTop="0.2in"
        android:layout_marginBottom="0.2in"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="0.2in"
        android:text="   Este é um pequeno texto que explica a loja. Este é um pequeno texto que explica..."/>



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5in"
        android:layout_marginTop="0.2in"

        android:src="@drawable/icones"
        />

</LinearLayout>
